<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp">

    <LinearLayout
        android:id="@+id/viewPagerID"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:foregroundGravity="top"
        android:gravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="0dp"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:id="@+id/noteitemlayoutID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleid"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#1810AD"
                    android:backgroundTint="#1810AD"
                    android:gravity="center"
                    android:text="title"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/notilayoutitem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#81deea"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/notiimage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:id="@+id/notiText"
                        android:layout_width="212dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="TextView"

                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/dateofnoteid"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0"
                        android:background="@android:color/transparent"
                        android:ems="10"

                        android:gravity="center"
                        android:textColor="@color/white"

                        android:textSize="10sp"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>